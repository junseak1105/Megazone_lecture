package j20220802;

import java.util.ArrayList;

public class Post {
	public static ArrayList post = new ArrayList();
	
	String title;
	String author;
	String date;
	int hit;
	int like;
	
	
	public Post(String title,String author,String date,int hit, int like) {
		this.title = title;
		this.author = author;
		this.date = date;
		this.hit = hit;
		this.like = like;
	}
	
	public static void Insert_post(int cnt) {
		for (int i = 0; i < cnt; i++) {
			Post pst = new Post("제목"+i, "작성자"+i, "2022-08-02", i, i);
			post.add(pst);
		}
	}
	
	public static void Print_post() {
		System.out.println("제목\t\t|작성자\t|날짜\t\t|조회수\t|좋아요");
		for (int i = 0; i < post.size(); i++) {
			Post temp = (Post)post.get(i);
			System.out.println(temp.title+"\t\t"+temp.author+"\t"+temp.date+"\t"+temp.hit+"\t\t"+temp.like);
		}
		
	}
	public static void main(String[] args) {
		Insert_post(5);
		Print_post();
		
		
	}
}
