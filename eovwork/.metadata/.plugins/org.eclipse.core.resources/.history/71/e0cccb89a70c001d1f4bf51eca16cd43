package j20220726;

public class While_1 {

	public static void main(String[] args) {
		int init = 1;
		int sum = 0;
		
		while (++init<=10) {
			sum += init;
		}
		System.out.println(sum);
		
		int sumeven = 0;
		int sumodd = 0;
		
		int j = 0;
		while(++j<22) {
			if (j % 2 == 0) {
				if (j != 4 && j != 6 && j != 10 && j != 20) {
					sumeven += j;
				}
			} else {
				if (j != 7 && j != 11 && j == 19) {
					sumodd += j;
				}
			}
		}

		System.out.println("짝수합:" + sumeven);
		System.out.println("홀수합:" + sumodd);
		
		for (int i = 0; i < 21; i++) {
			if (i % 2 == 0) {
				if (i != 4 && i != 6 && i != 10 && i != 20) {
					System.out.println(i);
					sumeven += i;
				}
			} else {
				if (i == 1 || i == 3 || i == 5 || i == 9 || i == 13 || i == 15 || i == 17) {
					sumodd += i;
				}
			}
		}

		System.out.println("짝수합:" + sumeven);
		System.out.println("홀수합:" + sumodd);

	}

}
