package questionpool;

import java.awt.Button;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.Label;
import java.awt.TextField;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;
	

public class Gwang_Home extends Frame implements ActionListener{

	public static ArrayList list = new ArrayList();
	public TextField searchbox = new TextField();
	public Label resultbox = new Label("");
	
	String name;
	int age;
	String address;
	
	public Gwang_Home() {
		setSize(500,500);
		setLayout(new FlowLayout());
		setVisible(true);
		addWindowListener(new WindowEvent());
		Button btn = new Button("search");
		btn.addActionListener(this);
		
		add(searchbox);
		add(btn);
		add(resultbox);
		
	}
	
	public Gwang_Home(String name, int age, String address) {
		this.name = name;
		this.age = age;
		this.address = address;
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		String str = e.getActionCommand();
		if(str.equals("search")) {
			System.out.println("test1");
			SearchName();
		}
		
	}
	
	public class WindowEvent extends commonWindow{
		@Override
		public void windowClosing(java.awt.event.WindowEvent e) {
			// TODO Auto-generated method stub
			super.windowClosing(e);
		}
	}
	public void SearchName() {
		System.out.println("test");
		for (int i = 0; i < list.size(); i++) {
			Gwang_Home temp = (Gwang_Home)list.get(i);
			if(temp.name.equals(searchbox.getText())) {
				resultbox.setText("searched- Name:"+temp.name+" Age:"+temp.age+" Address:"+temp.address);
			}
		}
	}
	
	public void Add_List(int cnt) {
		for (int i = 1; i <= cnt; i++) {
			Gwang_Home temp = new Gwang_Home("jay"+i,20+i,"busan"+i);
			list.add(temp);
		}
	}
	
	public static void main(String[] args) {
		Gwang_Home gh = new Gwang_Home();
		gh.Add_List(5);
		
	}
	
}
