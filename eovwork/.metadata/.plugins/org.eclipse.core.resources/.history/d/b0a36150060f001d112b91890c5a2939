package j20220729;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.Hashtable;
import java.util.StringTokenizer;

public class Hash_4 {
	String name;
	int age;
	String address;

	public Hash_4(String name, int age, String address) {
		this.name = name;
		this.age = age;
		this.address = address;
	}

	public static void main(String[] args) throws NumberFormatException, IOException {
		BufferedReader buffer = new BufferedReader(new InputStreamReader(System.in));
		ArrayList list = new ArrayList();

		String str = "";
		while (true) {
			System.out.println("이름 나이 주소 입력(/로 구분), 그만하려면 0");
			str = buffer.readLine();
			if (str.equals("0")) {
				break;
			} else {
				Hashtable table = new Hashtable();
				StringTokenizer token = new StringTokenizer(str, "/");
				String temp = (String) token.nextElement();
				table.put("이름", temp);
				temp = (String) token.nextElement();
				table.put("나이", Integer.parseInt(temp));
				temp = (String) token.nextElement();
				table.put("주소", temp);
				list.add(table);
			}
		}
		System.out.println("검색하려는 이름을 입력하세요");
		str = buffer.readLine();
		for (int i = 0; i < list.size(); i++) {
			Hashtable test = (Hashtable) list.get(i);
			if (test.get("이름").equals(str)) {
				System.out.println(test.get("이름") + "/" + test.get("나이") + "/" + test.get("주소"));
				break;
			} else if (i == list.size() - 1) {
				System.out.println("검색결과 없음");
				break;
			}
		}

	}
}
