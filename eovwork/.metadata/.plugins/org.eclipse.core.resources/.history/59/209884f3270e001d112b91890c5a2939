package j20220728;
import java.util.*;
public class Token_2 {
	
	public static void main(String[] args) {
		
		String home ="김재훈/20/한국";
		
		StringTokenizer token = new StringTokenizer(home, "/");
		
		while(token.hasMoreElements()) {
			System.out.println(token.nextElement());
			if (token.nextElement().equals("김재훈")) {
				System.out.println("이름:"+token.nextToken());
			}else if(token.nextElement().equals("20")) {
				System.out.println("나이:"+token.nextToken());
			}else if(token.nextElement().equals("한국")){
				System.out.println("국적:"+token.nextToken());
			}
		}
	}
}
