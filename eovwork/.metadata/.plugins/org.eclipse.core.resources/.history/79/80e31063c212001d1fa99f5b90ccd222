package j20220803;

import java.awt.Button;
import java.awt.FlowLayout;
import java.awt.Frame;

import common.commonWindow;
import j20220802.awt.CommonAwtEvent;


public class Awt_1{
	
	
	public Awt_1() {
		Frame fr = new Frame();
		fr.setSize(300,300);
		fr.setVisible(true);
		fr.setLayout(new FlowLayout());
		
		Button btn1 = new Button();
		Button btn2 = new Button();
		Button btn3 = new Button();
		btn1.addActionListener(new CommonAwtEvent());
		btn2.addActionListener(new CommonAwtEvent());
		btn3.addActionListener(new CommonAwtEvent());
		
		fr.add(btn1);
		fr.add(btn2);
		fr.add(btn3);	
		
		fr.addWindowListener(new commonWindow());
		
	}
	
	public static void main(String[] args) {
		Awt_1 awt = new Awt_1();	
	}
}
